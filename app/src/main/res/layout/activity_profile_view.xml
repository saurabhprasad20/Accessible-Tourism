<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ap.efficient_farming.ProfileView">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:id="@+id/btn_profile_view_navigateUp"
                android:text="Navigate Up"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_profile_header"
                android:focusable="true"
                android:defaultFocusHighlightEnabled="true"
                android:text="PROFILE DETAILS"
                android:gravity="center"
                android:textStyle="bold"
                android:tag="@string/nav_header_title"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="visible"
                android:focusable="true"
                android:id="@+id/tv_profile_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="visible"
                android:focusable="true"
                android:text="gender "
                android:id="@+id/tv_profile_gender"/>

            <TextView
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="60dp"
                android:focusable="true"
                android:text="roll "
                android:id="@+id/tv_profile_roll"/>

            <TextView
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="60dp"
                android:focusable="true"
                android:text="phone "
                android:id="@+id/tv_profile_phone"/>



        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>