<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ap.efficient_farming.ConfirmationPageActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:gravity="center"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="true"
            android:id="@+id/tv_custom_activity_90_top"
            android:text="Confirmation Page"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="true"
            android:text=""
            android:id="@+id/tv_custom_activity_90"
            android:layout_margin="10dp"
            android:padding="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:focusable="true"
            android:text="call"
            android:id="@+id/btn_custom_activity_call"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:focusable="true"
            android:id="@+id/btn_custom_activity_cancell"
            android:text="cancel"/>


    </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>